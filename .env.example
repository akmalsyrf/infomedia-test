# Server Configuration
SERVER_PORT=8080

# Database Configuration
# Options: "postgres" or "sqlite"
DATABASE_TYPE=postgres
DATABASE_DSN=postgres://postgres@localhost/test?sslmode=disable

# JWT Configuration
JWT_SECRET=change-this-secret-key-in-production
JWT_ACCESS_TOKEN_EXPIRY=15
JWT_REFRESH_TOKEN_EXPIRY=7
JWT_REFRESH_TOKEN_ROTATION=true

# Password Configuration
PASSWORD_MIN_LENGTH=8

# Email Configuration (Optional)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=your-email@gmail.com
EMAIL_FROM_NAME=Boilerplate API
